<h1>List of Users</h1>

<%= form_tag(users_path, method: :get) do %>
  <p>
    <%= text_field_tag :search, params[:search], placeholder: "Search by username" %>
    <%= submit_tag "Search" %>
  </p>
<% end %>

<strong> Total Users: <%= User.count %></strong>

<table>
  <thead>
    <tr>
      <th>Username</th>
      <th>Email</th>
      <th>Join</th>
      <th>Delete</th>
      <!-- <th>Actions</th> -->
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.username %></td>
        <td><%= user.email %></td>
        <td><%= user.created_at + 25200 %></td>
        
        <td>
          <%= link_to "Delete", user_path(user), method: :delete, data: { confirm: "Are you sure?" } %>
        </td>

        
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "Back to homepage", links_path %> 


