<%= form_with(model: link) do |form| %>
  <% if link.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(link.errors.count, "error") %> prohibited this link from being saved:</h2>

      <ul>
        <% link.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :Name, style: "display: block" %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :Description, style: "display: block" %>
    <%= form.text_area :url, style: "resize: both;" %> <!-- Users can adjust size by dragging the corners -->
  </div>

  <div class="field">
    <%= form.label :rush_emergency? %>
    <%= form.select :ruch_emergency, ['Yes', 'No', 'Notify'] %>
  </div>

  <div>
    <%= form.label :type_emergency, style: "display: block" %>
    <%= form.select :type_emergency, ['Harassment', 'Fire', 'Accident', 'Medical', 'Notify'] %>
    <!-- Replace the array with your actual options -->
  </div>

  <div class="field">
    <%= form.label :user %><br />
    <%= form.text_field :user, value: current_user.username, readonly: true %> 
    <!-- readonly: true will make this field can not edit -->
  </div>
  

  <div>
    <%= form.submit "Submit", class:"btn" %>
  </div>
<% end %>
