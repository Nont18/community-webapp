<%= form_with(model: link) do |form| %>
  <% if link.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(link.errors.count, "error") %> prohibited this link from being saved:</h2>

      <ul>
        <% link.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :url, style: "display: block" %>
    <%= form.text_area :url, style: "resize: both;" %> <!-- Users can adjust size by dragging the corners -->
  </div>

  <div class="field">
    <%= form.label :rush_emergency? %>
    <p>Yes/No</p>
    <%= form.select :ruch_emergency, ['Yes', 'No', 'Option 3'] %>
  </div>

  <div>
    <%= form.label :type_emergency, style: "display: block" %>
    <%= form.select :type_emergency, ['Harassment', 'Fire', 'Accident', 'Medical'] %>
    <!-- Replace the array with your actual options -->
  </div>

  <div>
    <%= form.file_field :picture %> 
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
